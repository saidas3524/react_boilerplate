{
        "version": "0.2.0",
        "configurations": [
            {
                "type": "chrome",
                "request": "launch",
                "name": "Launch Chrome against localhost",
                "url": "http://localhost:8080",
                "webRoot": "${workspaceFolder}/build",
                "sourceMapPathOverrides": {
                    "webpack:///src/*": "${webRoot}/*"
                  },
                "sourceMaps": true
            },
            {
                "type": "chrome",
                "request": "attach",
                "name": "Attach to Chrome",
                "port": 9222,
                "webRoot": "${workspaceFolder}/build",
                "sourceMapPathOverrides": {
                    "webpack:///src/*": "${webRoot}/*"
                  },
                "sourceMaps": true
            }
        ]
    }